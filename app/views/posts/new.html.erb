<h1>New Post</h1>

<%= link_to 'Go Back', root_path %>

<%= form_with model: @post do |f| %>
    <%= f.label :title, 'Post Title: ' %>
    <%= f.text_field :title, placeholder: 'enter title' %>
    <%= f.label :body, 'Post Message: ' %>
    <%= f.text_field :body, placeholder: 'enter message' %>
    <%= f.hidden_field :user, :value => current_user[:email] %>
    <%= f.hidden_field :user_id, :value => current_user[:id] %>
    <%= f.submit 'Submit' %>
<% end %>

<% if @post.errors.any? %>
    <div id='errors'>
        <h2><%= pluralize(@post.errors.count, "error") %>:</h2>
        <ul>
            <% @post.errors.full_messages.each do |m| %>
                <li><%= m %></li>
            <% end %>
      </ul>
    </div>
<% end %>